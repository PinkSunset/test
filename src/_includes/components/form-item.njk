{% macro inputDefault(type, name, placeholder, necessarily) %}
    <label class="relative group">
        <input
            type="{{ type }}"
            name="entry.{{ name }}"
            placeholder="{{ placeholder }}"
            autocomplete="false"
            required
            class="w-full px-5 pt-8 pb-2 text-red-600 placeholder-transparent transition-all bg-transparent outline-none appearance-none inputnew peer ring-inset ring-1 rounded-2xl focus:outline-none h-14 focus-visible:ring-themes-second hover:ring-red-600 disabled:text-gray-500 disabled:hover:ring-gray-500 ring-gray-500"
        >
        <span class="absolute text-xs text-gray-600 transition-all pointer-events-none peer-focus-visible:text-themes-second peer-disabled:text-gray-500 peer-hover:text-red-600 peer-placeholder-shown:text-base peer-placeholder-shown:top-7 top-3 peer-focus:top-3 peer-focus:text-xs peer-focus:translate-y-0 peer-placeholder-shown:-translate-y-1/2 inset-x-5">
            <span class="absolute top-0 left-0 text-red-600 transition-opacity empty:opacity-0 peer"></span>
            <span class="transition-opacity opacity-0 peer-empty:opacity-100">
                {{ placeholder }}
                {% if necessarily == true %}
                    <span class="text-red-600">*</span>
                {% endif %}
            </span>
        </span>
    </label>
{% endmacro %}

{% macro ariaLabel(name, cols, rows, placeholder, necessarily) %}
    <label class="relative grid group">
        <textarea
            name="entry.{{ name }}"
            cols="{{ cols }}"
            rows="{{ rowss }}"
            placeholder="{{ placeholder }}"
            autocomplete="false"
            class="w-full resize-none h-[100px] px-5 pt-8 pb-2 text-red-600 placeholder-transparent transition-all bg-transparent outline-none appearance-none inputnew peer ring-inset ring-1 rounded-2xl focus:outline-none focus-visible:ring-themes-second hover:ring-red-600 disabled:text-gray-500 disabled:hover:ring-gray-500 ring-gray-500"
            required>
        </textarea>
        <span class="absolute text-xs text-gray-600 transition-all pointer-events-none peer-focus-visible:text-themes-second peer-disabled:text-gray-500 peer-hover:text-red-600 peer-placeholder-shown:text-base peer-placeholder-shown:top-7 top-3 peer-focus:top-3 peer-focus:text-xs peer-focus:translate-y-0 peer-placeholder-shown:-translate-y-1/2 inset-x-5 login-reg__placeholder">
            <span class="absolute top-0 left-0 text-red-600 transition-opacity error empty:opacity-0 peer"></span>
            <span class="transition-opacity opacity-0 peer-empty:opacity-100">
                {{ placeholder }}
                {% if necessarily == true %}
                    <span class="text-red-600">*</span>
                {% endif %}
            </span>
        </span>
    </label>
{% endmacro %}